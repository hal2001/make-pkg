#!/usr/bin/env bash

# Output version number and exit, if requested. Note that the `ver='...'` statement is automatically updated by `make version VER=<newVer>` - DO keep the 'v' suffix in the variable *definition*.
[[ \$1 == '--version' ]] && { ver='v${vVERSION}'; echo "\${ver#v}"; exit 0; }

# Print CLI usage information, if requested.
[[ \$1 == '-h' || \$1 == '--help' ]] && { 
  cat <<EOF
??? Please provide CLI usage information here.
EOF
  exit 0
}

printf '%s\n' "I AM BUT A POOR STUB. FLESH ME OUT, PLEASE." >&2; exit 2
